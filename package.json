{
  "name": "vscode-claudex",
  "displayName": "Claudex",
  "description": "Claude Code for VSCode.",
  "version": "0.0.1",
  "publisher": "CometixSpace",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Haleclipse/Claudex"
  },
  "type": "module",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "./dist/media/icons/claude-logo.png",
  "main": "./dist/extension.cjs",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Claudex",
      "properties": {
      }
    },
    "commands": [
      {
        "command": "claudex.openChat",
        "title": "Claudex: Open Chat"
      },
      {
        "command": "claudex.openSettings",
        "title": "配置Claudex",
        "icon": "$(gear)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claudex",
          "title": "Claudex",
          "icon": "dist/media/icons/claude.svg"
        }
      ]
    },
    "views": {
      "claudex": [
        {
          "id": "claudex",
          "type": "webview",
          "name": "Claudex",
          "when": "claudex.hasWorkspaceFolder"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "claudex.openSettings",
          "when": "view == claudex",
          "group": "navigation@99"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "watch:webview": "vite build --config webview/vite.config.mts --watch",
    "dev": "npm-run-all -p watch watch:webview",
    "build:webview": "vite build --config webview/vite.config.mts",
    "package": "pnpm run build:webview && pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "check-types:webview": "vue-tsc --noEmit",
    "check-types:all": "npm run check-types && npm run check-types:webview",
    "lint": "eslint src",
    "test": "vscode-test",
    "vsix": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vscode/codicons": "^0.0.40",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vite-plugin-svg-icons": "^2.0.1",
    "vue": "^3.5.21",
    "vue-tsc": "^3.0.8"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.123",
    "@anthropic-ai/sdk": "^0.63.1",
    "@mdi/font": "^7.4.47",
    "@modelcontextprotocol/sdk": "^1.18.1",
    "@vueuse/core": "^13.9.0",
    "marked": "^16.3.0",
    "motion-v": "^1.7.1",
    "path-browserify-esm": "^1.0.6",
    "pinia": "^3.0.3",
    "rxjs": "^7.8.2",
    "zod": "^4.1.11"
  }
}
