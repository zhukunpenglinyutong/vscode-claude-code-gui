{
  "name": "vscode-claude-code-gui",
  "displayName": "Claude Code GUI",
  "description": "VsCode版 Claude Code GUI 插件",
  "version": "0.0.1",
  "publisher": "zhukunpenglinyutong",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhukunpenglinyutong/vscode-claude-code-gui"
  },
  "type": "module",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "./dist/media/icons/claude-logo.png",
  "main": "./dist/extension.cjs",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Claude Code GUI",
      "properties": {
      }
    },
    "commands": [
      {
        "command": "claude-code-gui.openChat",
        "title": "Claude Code GUI: Open Chat"
      },
      {
        "command": "claude-code-gui.openSettings",
        "title": "配置 Claude Code GUI",
        "icon": "$(gear)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-code-gui",
          "title": "Claude Code GUI",
          "icon": "dist/media/icons/claude.svg"
        }
      ]
    },
    "views": {
      "claude-code-gui": [
        {
          "id": "claude-code-gui",
          "type": "webview",
          "name": "Claude Code GUI",
          "when": "claude-code-gui.hasWorkspaceFolder"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "claude-code-gui.openSettings",
          "when": "view == claude-code-gui",
          "group": "navigation@99"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "watch:webview": "vite build --config webview/vite.config.mts --watch",
    "dev": "npm-run-all -p watch watch:webview",
    "build:webview": "vite build --config webview/vite.config.mts",
    "package": "pnpm run build:webview && pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "check-types:webview": "tsc --noEmit --project webview/tsconfig.json",
    "check-types:all": "npm run check-types && npm run check-types:webview",
    "lint": "eslint src",
    "test": "vscode-test",
    "vsix": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vscode/codicons": "^0.0.40",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vite-plugin-svg-icons": "^2.0.1"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.123",
    "@anthropic-ai/sdk": "^0.63.1",
    "@mdi/font": "^7.4.47",
    "@modelcontextprotocol/sdk": "^1.18.1",
    "framer-motion": "^11.3.0",
    "marked": "^16.3.0",
    "path-browserify-esm": "^1.0.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rxjs": "^7.8.2",
    "zod": "^4.1.11",
    "zustand": "^4.5.4"
  }
}
